<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title:</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="postDec">Post:</label>
        <textarea type="textArea" class="form-control" rows="5" name="postDec"></textarea>
    </div>
    <button class="btn btn-lg btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>